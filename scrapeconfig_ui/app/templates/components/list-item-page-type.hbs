{{#list-item-selectable value=(mut sample.page_type) onChange=(action 'savePageType') menuContainer="body" menuAlign="right" as |select|}}
    {{#if hasBlock}}
        {{#select.header}}
            {{yield}}
        {{/select.header}}
    {{/if}}
    {{#each types as |type|}}
        {{#select.item value=type action=(action select.setValueAndClose type)}}
            {{!-- list-item-icon class="icon" icon=type  --}} {{type}}
        {{/select.item}}
    {{/each}}
{{/list-item-selectable}}
